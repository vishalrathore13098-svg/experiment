const express = require('express');
const app = express();

app.use(express.json());

function logger(req, res, next) {
  const time = new Date().toISOString();
  console.log(`[${time}] ${req.method} ${req.url}`);
  next();
}

function auth(req, res, next) {
  const header = req.headers['authorization'];
  if (header && header.startsWith('Bearer ')) {
    const token = header.split(' ')[1];
    if (token === 'mysecrettoken') {
      next();
    } else {
      res.status(403).json({ error: 'Authentication header missing or invalid' });
    }
  } else {
    res.status(403).json({ error: 'Authentication header missing or invalid' });
  }
}

app.use(logger);

app.get('/middleware/public', (req, res) => {
  res.json({ message: 'This is a public route. No authentication required.' });
});

app.get('/middleware/protected', auth, (req, res) => {
  res.json({ message: 'You have accessed a protected route!' });
});

app.listen(3000);
